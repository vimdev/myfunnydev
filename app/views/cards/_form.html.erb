
<% form_for(@card) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :type %><br />
    <%= f.text_field :type %>
  </p>
  <p>
	Tags (seperate with comma ','): <%= f.text_field :tag_list %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>